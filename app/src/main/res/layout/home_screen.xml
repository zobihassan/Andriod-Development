<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:gravity="center"
        tools:context=".Home_Screen">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:onClick="onImageViewClick"
                android:src="@drawable/bh_btn" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Back Hand"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_toRightOf="@id/ll1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:onClick="onImageViewClick"
                android:src="@drawable/fingers_btn" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Finger"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_below="@id/ll1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:onClick="onImageViewClick"
                android:src="@drawable/foot_btn" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Foot"
                android:textSize="25sp"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_below="@id/ll2"
            android:layout_toRightOf="@id/ll3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:onClick="onImageViewClick"
                android:src="@drawable/goltikki_btn" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Gol Tikki"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_below="@id/ll3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:onClick="onImageViewClick"
                android:src="@drawable/fh_btn" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Front Hand"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_below="@id/ll4"
            android:layout_toRightOf="@id/ll5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:onClick="onImageViewClick"
                android:src="@drawable/bridal_btn" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bridal"
                android:layout_marginLeft="40dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_below="@id/ll5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv7"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:onClick="onImageViewClick"
                android:src="@drawable/eid_btn" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Eid Special"
                android:textSize="25sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_below="@id/ll6"
            android:layout_toRightOf="@id/ll7"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv8"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:clickable="true"
                android:onClick="onImageViewClick"
                android:layout_marginTop="5dp"
                android:src="@drawable/arm_btn" />

            <TextView
                android:id="@+id/tv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Arm"
                android:gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
